<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<!--에러 처리-->
	<error-page>
	    <error-code>400</error-code>
	    <location>/WEB-INF/views/error/400.jsp</location>
	</error-page>
	 
	<error-page>
	    <error-code>404</error-code>
	    <location>/WEB-INF/views/error/404.jsp</location>
	</error-page>
	 
	<error-page>
	    <error-code>500</error-code>
	    <location>/WEB-INF/views/error/500.jsp</location>
	</error-page>
	
	<!--인코딩 처리-->
	<filter>
		<filter-name>characterEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>EUC-KR</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncoding</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	
	 <!-- 서블릿 컨테이너 생성 -->
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    
    <!--스프링 컨테이너 위치 지정-->
    <init-param>
    	<param-name>contextConfigLocation</param-name>
    	<param-value>/WEB-INF/spring/appServlet/presentation-layer.xml</param-value> <!--원래 기본경로(/WEB-INF/dispatcher-servlet.xml)-->
    </init-param>
    
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <!--ContextLoaderListener는 기본적으로 /WEB-INF/applicationContext.xml 파일을 읽는다 그것의 경로를 바꾸는 작업-->
  <context-param>
  	<param-name>contextConfigLocation</param-name>
  	<param-value>classpath:root-context.xml</param-value>
  </context-param>
  
  <!--ContextLoaderListener생성-->
  <listener>
  	<listener-class>
  		org.springframework.web.context.ContextLoaderListener
  	</listener-class>
  </listener>
</web-app>
